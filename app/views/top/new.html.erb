<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
<div class = "background2">
  <div class = "comment-box">
    <%= form_with( url: '/top', method: :post, local: true ) do |f| %>
      <section class="comment-title">コメントの投稿欄</section>
      <input type="text" name="name" class= "nickname"  placeholder="名前もしくはニックネームを記載！">
      <div class="image_box">
        <%# <input type="text" name="imageurl" class="url" placeholder="URLもしくはデータの入力"> %>
        <%= f.text_field :imageurl, :class=> "url", placeholder: "URLもしくはデータの入力" %>
          <div class="image_file">
            <%= f.label :image do %>
              <i class="fas fa-adjust fa-pulse">
              <%= f.file_field :image, class:'hidden' %></i>
            <% end %>
        </div>
      </div>
      <textarea type="text" name="text" class="comment" placeholder="コメント"></textarea>
      <section></section>
      <input type= "submit" value="送信する" class="submit">
    <% end %> 
  </div>
</div>
